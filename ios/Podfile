source 'https://github.com/CocoaPods/Specs.git'

platform :ios, '10.0'

# https://github.com/airbnb/react-native-maps/issues/718#issuecomment-295585410
target 'ForestWatcher' do

  pod 'AppAuth'
  pod 'FBSDKLoginKit'
  pod 'FBSDKShareKit'

  # pod 'react-native-fast-image', :path => '../node_modules/react-native-fast-image'
  # pod 'CodePush', :path => '../node_modules/react-native-code-push'

  ## appcenter dependencies.
  pod 'AppCenterReactNativeShared', '~> 1.10.0'

  ## react-native-maps dependencies.
  pod 'react-native-maps', path: '../node_modules/react-native-maps'
  pod 'react-native-google-maps', path: '../node_modules/react-native-maps'
  pod 'GoogleMaps'
  pod 'Google-Maps-iOS-Utils'

  ## React dependencies, added so that various projects which don't use header search paths can still function correctly.
  pod 'React', path: '../node_modules/react-native', subspecs: [
    'RCTImage'
  ]
  pod 'yoga', :path => '../node_modules/react-native/ReactCommon/yoga'

  ## react-native-navigation dependencies.
  pod 'ReactNativeNavigation', :path => '../node_modules/react-native-navigation'

  pod 'SentryReactNative', :path => '../node_modules/react-native-sentry'

  post_install do |installer|
    installer.pods_project.targets.each do |target|
      if target.name == 'react-native-google-maps'
        target.build_configurations.each do |config|
          config.build_settings['CLANG_ENABLE_MODULES'] = 'No'
        end
      end
      # If the target's name is React, remove it from the project.
      # This means that the pods which don't correctly add header search paths still get their search paths,
      # while also ensuring that we don't have duplicated react-native modules.
      if target.name == "React"
        target.remove_from_project
      end
      target.build_configurations.each do |config|
        config.build_settings['CLANG_WARN_OBJC_IMPLICIT_RETAIN_SELF'] = 'NO'
        config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '10.0'
      end
    end
  end
end
