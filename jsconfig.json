{
  "compilerOptions": {
    "jsx": "react",
    "target": "ES6",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "app/*": ["./app/*"],
      "screens/*": ["./app/screens/*"],
      "locales/*": ["./app/locales/*"],
      "config/*": ["./app/config/*"],
      "helpers/*": ["./app/helpers/*"],
      "components/*": ["./app/components/*"],
      "containers/*": ["./app/containers/*"],
      "redux-modules/*": ["./app/redux-modules/*"],
      "assets/*": ["./app/assets/*"],
      "offline/*": ["./app/offline/*"],
      "types/*": ["./app/types/*"]
    }
  },
  "include": ["app"],
  "exclude": [ "node_modules"]
}
